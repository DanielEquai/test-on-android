<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainnet"
    android:background="@color/black"
    tools:context=".SplashScreen">
    <ImageView
        android:id="@+id/noti"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_notifications_active_24"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/search"
        app:layout_constraintRight_toLeftOf="@+id/noti"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toTopOf="@+id/noti"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fam"
        android:src="@drawable/family"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greetings"
        android:text="Good Day"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/fam"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/fam"/>

    <ImageView
        android:id="@+id/sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sun"
        app:layout_constraintRight_toRightOf="@id/noti"
        app:layout_constraintTop_toBottomOf="@id/noti"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentname"
        android:text="Chief Equai"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/greetings"
        app:layout_constraintLeft_toLeftOf="@id/greetings"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:id="@+id/side1"
        app:cardBackgroundColor="#fdce2a"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/studentname"
        app:layout_constraintLeft_toLeftOf="@+id/studentname"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="70dp"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classes Today"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="105dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2mm"
            android:src="@drawable/chat"
            android:layout_marginLeft="140dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="__________"
            android:textSize="40dp"
            android:layout_marginTop="65dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="55dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/white"
            android:layout_marginLeft="140dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:id="@+id/side2"
        app:cardBackgroundColor="#e0115f"
        app:cardCornerRadius="10dp"
        app:layout_constraintRight_toRightOf="@id/sun"
        app:layout_constraintTop_toBottomOf="@id/sun"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="70dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classes Today"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="105dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="55dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/white"
            android:layout_marginLeft="140dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="__________"
            android:textSize="40dp"
            android:layout_marginTop="65dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2mm"
            android:src="@drawable/todolist"
            android:layout_marginLeft="140dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/side3"
        app:cardBackgroundColor="#592693"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/side1"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/side1"
        app:layout_constraintRight_toRightOf="@+id/side2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="70dp"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classes Today"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="___________________"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="105dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="55dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/white"
            android:layout_marginLeft="300dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2mm"
            android:src="@drawable/checkmark"
            android:layout_marginLeft="310dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:id="@+id/side4"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/side3"
        app:layout_constraintLeft_toLeftOf="@+id/side1"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created Physics \n study group"
            android:textColor="#a09d9c"
            android:textSize="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="50dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/account"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gautam Verma"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="______________"
            android:textSize="40dp"
            android:layout_marginTop="75dp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/add"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="122dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN"
            android:textSize="20dp"
            android:layout_marginTop="130dp"
            android:textColor="@color/teal_700"
            android:layout_marginLeft="55dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:id="@+id/side5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toRightOf="@+id/side4"
        app:layout_constraintTop_toBottomOf="@+id/side3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/account"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prave"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Started Celcs \n on Physic"
            android:textColor="#a09d9c"
            android:textSize="22dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="______________"
            android:textSize="40dp"
            android:layout_marginTop="75dp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/chattt"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="122dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMAND"
            android:textSize="15dp"
            android:layout_marginTop="130dp"
            android:textColor="@color/teal_700"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dotss"
        app:layout_constraintBottom_toBottomOf="@+id/mainnet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dotss"
        app:layout_constraintBottom_toBottomOf="@+id/mainnet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>